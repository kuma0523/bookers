<!DOCTYPE html>
<html lang=ja>

  <meta charset="utf-8"/>

  <link rei = "stvlesheet" herf = "index.css">


  <body>


    <p class="color"><%= flash[:notice] %></p>


      <h1>Books</h1>


      <table>

        <thead>

          <th class= "th">Title</th>

          <th class= "th">Body</th>

          <th class= "th" clospan="3"></th>

        </thead>

        <% @books.each do |book| %>

        <tbody>

          <tr>

            <%= form_with model: @book , url: '/books', method: :post do %>

            <td class= "td"><%= book.title %></td>

            <td class= "td"><%= book.body %></td>

            <td class= "td"><a><%= link_to"Show","/books/#{book.id}" %></a></td>

            <td class= "td"><a><%= link_to"Edit","/books/#{book.id}/edit" %></a></td>

            <td class= "td"><a><%= link_to"Destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></a></td>

            <% end %>

          </tr>

        </tbody>

        <% end %>

      </table>


      <%= form_with model: @book , url: '/books', method: :post do |f| %>

        <h2>New book</h2>


        <% if @book.errors.any? %>

          <%= @book.errors.count %>error prohibited this book from being saved:

          <ul>

            <% @book.errors.full_messages.each do |message| %>

              <li><%= message %></li>

            <% end %>

          </ul>

        <% end %>

      <div class="text">

        <h4>Title</h4>

        <%= f.text_field :title %>

      </div>



      <div class="text">

        <h4>Body</h4>

        <%= f.text_area :body %>

      </div>


      <div class="box">

        <%= f.submit 'Create book' %>

      </div>


      <% end %>

  </body>


</html>